weight = float(input("Enter your weight:"))
unit = input("Whats the unit you currently are in (K or L)?:")
if unit == "K":
    weight = weight * 2.205
    unit = "Lbs."
    print(f"Your weight is: {round(weight, 2)} {unit}")
elif unit == "L":
    weight = weight / 2.205
    unit = "KGs."
    print(f"Your weight is: {round(weight, 2)} {unit}")
else:
    print("Bro really thought he could outsmart me.")
